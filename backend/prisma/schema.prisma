// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id                Int       @id
  title             String
  score             Float?
  alternativeTitles String[]  @map("alternative_titles")
  picture           String?
  status            String?
  mediaType         String?   @map("media_type")
  startDate         DateTime? @map("start_date")
  endDate           DateTime? @map("end_date")
  releasedSeason    String?   @map("released_season")
  genres            String[]
  synopsis          String?
  ageClassification String?   @map("age_classification")
  source            String?
  studios           String[]
  episodes          Int?
  rank              Int?
  popularity        Int?
  nsfw              String?
  relatedAnime      String[]  @map("related_anime")

  @@map("animes")
}

model SeedTracking {
  model      Models   @id
  lastSeeded DateTime @map("last_seeded")

  @@map("seed_tracking")
}

enum Models {
  Anime @map("anime")

  @@map("models")
}
