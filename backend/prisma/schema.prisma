// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  malId              Int                @id
  name               String
  score              Float?
  genres             String[]
  japaneseName       String?
  type               Type?
  episodes           Int?
  broadcastStartDate DateTime?
  broadcastEndDate   DateTime?
  releaseDate        DateTime?
  studios            String[]
  source             String?
  duration           String?
  ageClassification  AgeClassification?
  popularity         Int?
  ranked             Int?
  watching           Int?
  animeRatings       AnimeRating[]

  @@index([name, japaneseName])
}

enum Type {
  TV
  Special
  ONA
  Music
  Movie
  OVA
}

enum AgeClassification {
  G      @map("G - All Ages")
  PG     @map("PG - Children")
  PG_13  @map("PG-13 - Teens 13 or older")
  R      @map("R - 17+ (violence & profanity)")
  R_PLUS @map("R+ - Mild Nudity")
  R_X    @map("Rx - Hentai")
}

model AnimeRating {
  id              Int             @id @default(autoincrement())
  userId          Int
  anime           Anime           @relation(fields: [animeId], references: [malId])
  animeId         Int
  rating          Int
  watchingStatus  WatchingStatus?
  watchedEpisodes Int?

  @@index([userId, animeId])
}

enum WatchingStatus {
  CURRENTLY_WATCHING
  COMPLETED
  ON_HOLD
  DROPPED
  PLAN_TO_WATCH
}
