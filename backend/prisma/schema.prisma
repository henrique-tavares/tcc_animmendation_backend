// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  malId              Int           @id
  name               String
  score              Float?
  genres             String[]
  japaneseName       String?
  type               String?
  episodes           Int?
  broadcastStartDate DateTime?
  broadcastEndDate   DateTime?
  releaseDate        DateTime?
  studios            String[]
  source             String?
  ageClassification  String?
  popularity         Int?
  ranked             Int?
  watching           Int?
  synopsis           String?
  animeRatings       AnimeRating[]

  @@index([name, japaneseName])
}

model AnimeRating {
  id              Int             @id @default(autoincrement())
  userId          Int
  anime           Anime           @relation(fields: [animeId], references: [malId])
  animeId         Int
  rating          Int
  watchingStatus  WatchingStatus?
  watchedEpisodes Int?

  @@index([userId, animeId])
}

enum WatchingStatus {
  CURRENTLY_WATCHING
  COMPLETED
  ON_HOLD
  DROPPED
  PLAN_TO_WATCH
}
